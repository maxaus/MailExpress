<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
        version="2.1">
    <component>
        <component-type>com.baev.mailexpress.ui</component-type>
        <component-class>com.baev.mailexpress.ui.UIAttachment</component-class>
    </component>
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>MailExpress</base-name>
            <var>msg</var>
        </resource-bundle>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>
    <factory>
        <exception-handler-factory>com.baev.mailexpress.util.exception.MailExpressExceptionHandlerFactoryImpl
        </exception-handler-factory>
    </factory>
</faces-config>